
//"Tech Career" metnini tersten yazdır

var mtn = "Tech Career";
var empty= ""
for( var i = mtn.lastIndexOf("r"); i > mtn.indexOf("T")-1; i--){
	empty += mtn[i]
}

console.log(empty)


