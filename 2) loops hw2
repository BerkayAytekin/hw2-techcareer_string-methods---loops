//1-50 arası sayılar içinde 3’e veya 5’e tam bölünebilen sayıları console a yaz ve kaç adet olduğunu console yaz.


empty = []

for(i = 1; i<51; i++){
	if(i%3 === 0 || i%5 === 0){
		empty.push(i);
		console.log(i)
	}
}

console.log("piece of numbers divisible by 3 and 5: " + empty.length)












